---
import { getTranslations, type Language } from '@/i18n';
import Icon from '@/components/Icon.astro';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const baseUrl = import.meta.env.BASE_URL || '';
const currentYear = new Date().getFullYear();
---

<footer class="bg-navy text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="md:col-span-2">
        <h3 class="text-xl font-bold mb-4">Studio Legale Ferrini</h3>
        <p class="text-gray-300 mb-4">
          {t.footer.description}
        </p>
        <div class="space-y-2 text-sm text-gray-300">
          <div class="flex items-center">
            <Icon name="MapPin" class="w-4 h-4 mr-2 flex-shrink-0" size={16} />
            <a
              href="https://maps.app.goo.gl/PwThSydmor3m82CV9"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-gold transition-colors duration-200"
            >
              {t.footer.address}
            </a>
          </div>
          <div class="flex items-center">
            <Icon name="Phone" class="w-4 h-4 mr-2 flex-shrink-0" size={16} />
            <a href={`tel:${t.home.cta.phone}`} class="hover:text-gold transition-colors duration-200">
              {t.home.cta.phone}
            </a>
          </div>
          <div class="flex items-center">
            <Icon name="Mail" class="w-4 h-4 mr-2 flex-shrink-0" size={16} />
            <a href={`mailto:${t.footer.email}`} class="hover:text-gold transition-colors duration-200">
              {t.footer.email}
            </a>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.quickLinks}</h4>
        <ul class="space-y-2 text-sm">
          <li>
            <a href={`${baseUrl}${lang}`} class="text-gray-300 hover:text-gold transition-colors duration-200">
              {t.nav.home}
            </a>
          </li>
          <li>
            <a href={`${baseUrl}${lang}/team`} class="text-gray-300 hover:text-gold transition-colors duration-200">
              {t.nav.team}
            </a>
          </li>
          <li>
            <a href={`${baseUrl}${lang}/faq`} class="text-gray-300 hover:text-gold transition-colors duration-200">
              {t.nav.faq}
            </a>
          </li>
          <li>
            <a href={`${baseUrl}${lang}/contact`} class="text-gray-300 hover:text-gold transition-colors duration-200">
              {t.nav.contact}
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}${lang}/where-we-are`}
              class="text-gray-300 hover:text-gold transition-colors duration-200"
            >
              {t.nav.whereWeAre}
            </a>
          </li>
        </ul>
      </div>

      <!-- Office Hours -->
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.officeHours}</h4>
        <p class="text-gray-300 mb-4">
          {t.footer.officeHoursDescription}
        </p>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <div class="text-sm text-gray-300">
        Â© {currentYear} Studio Legale Ferrini. {t.footer.copyright}
      </div>
      <!-- <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="#" class="text-gray-300 hover:text-gold transition-colors duration-200">
          <span class="sr-only">Privacy Policy</span>
          {t.footer.privacyPolicy}
        </a>
        <a href="#" class="text-gray-300 hover:text-gold transition-colors duration-200">
          <span class="sr-only">Terms of Service</span>
          {t.footer.termsOfService}
        </a>
      </div> -->
    </div>
  </div>
</footer>
