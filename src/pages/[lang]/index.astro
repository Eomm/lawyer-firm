---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Icon from '@/components/Icon.astro';
import { getTranslations, getStaticPaths, type Language } from '@/i18n';

export { getStaticPaths };

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);
const currentPath = `/${lang}`;
const baseUrl = import.meta.env.BASE_URL || '';
---

<Layout title={t.home.title} description={t.home.description} lang={lang} currentPath={currentPath}>
  <Header lang={lang} currentPath={currentPath} />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-navy to-navy-light text-white py-20 lg:py-32 overflow-hidden">
      <!-- Background Image with Fade Effect -->
      <div class="absolute inset-0">
        <img 
          src={`${baseUrl}images/gustice.avif`}
          alt="" 
          class="absolute -top-30 left-0 w-full h-[calc(100%+120px)] object-cover object-left-top opacity-40"
          aria-hidden="true"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-navy/20 via-navy/60 to-navy/95"></div>
      </div>
      <div class="absolute inset-0 bg-black opacity-10"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            {t.home.hero.title}
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto">
            {t.home.hero.subtitle}
          </p>
          <a
            href={`/${lang}/contact`}
            class="inline-block bg-gold text-navy px-8 py-4 rounded-lg text-lg font-semibold hover:bg-opacity-90 transition-colors duration-200 focus:outline-none focus:ring-4 focus:ring-gold focus:ring-opacity-50"
          >
            {t.home.hero.cta}
          </a>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-navy mb-4">
            {t.home.services.title}
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {t.home.services.items.map((service) => (
            <div
              class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200 border-t-4 border-gold"
            >
              {service.icon && (
                <div class="w-16 h-16 bg-navy rounded-lg flex items-center justify-center mb-6">
                  <Icon name={service.icon} class="w-8 h-8 text-gold" size={32} />
                </div>
              )}
              <h3 class="text-xl font-bold text-navy mb-4">{service.title}</h3>
              <p class="text-gray-600 leading-relaxed">{service.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-navy mb-4">
            {t.home.about.title}
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="p-6">
            <div
              class="w-20 h-20 bg-gold rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="Scale" class="w-10 h-10 text-navy" size={40} />
            </div>
            <h3 class="text-xl font-bold text-navy mb-4">{t.home.about.experience}</h3>
          </div>

          <div class="p-6">
            <div
              class="w-20 h-20 bg-gold rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="Users" class="w-10 h-10 text-navy" size={40} />
            </div>
            <h3 class="text-xl font-bold text-navy mb-4">{t.home.about.personalized}</h3>
          </div>

          <div class="p-6">
            <div
              class="w-20 h-20 bg-gold rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="CircleCheckBig" class="w-10 h-10 text-navy" size={40} />
            </div>
            <h3 class="text-xl font-bold text-navy mb-4">{t.home.about.results}</h3>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-navy text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          {t.home.cta.title}
        </h2>
        <p class="text-xl mb-8 text-gray-200 max-w-2xl mx-auto">
          {t.home.cta.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`/${lang}/contact`}
            class="inline-block bg-gold text-navy px-8 py-4 rounded-lg text-lg font-semibold hover:bg-opacity-90 transition-colors duration-200 focus:outline-none focus:ring-4 focus:ring-gold focus:ring-opacity-50"
          >
            {t.common.bookConsultation}
          </a>
          <a
            href={`tel:${t.home.cta.phone}`}
            class="inline-block border-2 border-gold text-gold px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gold hover:text-navy transition-colors duration-200 focus:outline-none focus:ring-4 focus:ring-gold focus:ring-opacity-50"
          >
            {t.home.cta.phone}
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang={lang} />
</Layout>
