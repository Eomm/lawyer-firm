---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Icon from '@/components/Icon.astro';
import { getTranslations, getStaticPaths, type Language } from '@/i18n';

export { getStaticPaths };

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);
const currentPath = `/${lang}/where-we-are`;
---

<Layout
  title={t.whereWeAre.title}
  description={t.whereWeAre.description}
  lang={lang}
  currentPath={currentPath}
>
  <Header lang={lang} currentPath={currentPath} />

  <main>
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-navy to-navy-light text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {t.whereWeAre.title}
        </h1>
        <p class="text-xl text-gray-200 max-w-3xl mx-auto">
          {t.whereWeAre.description}
        </p>
      </div>
    </section>

    <!-- Location Section -->
    <section class="py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Location Info -->
          <div>
            <!-- Locations -->
            <div class="max-w-2xl mx-auto text-left">
            {t.whereWeAre.locations.map((office) => (
              <div class="mb-8">
                <div class="flex items-start mb-4">
                  <div
                    class="w-12 h-12 bg-navy rounded-lg flex items-center justify-center mr-4 flex-shrink-0"
                  >
                    <Icon name="MapPin" class="w-6 h-6 text-gold" size={24} />
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-navy mb-2">{office.subtitle}</h3>
                    <a
                      href={office.googleMapsUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-700 text-lg underline hover:text-gold transition-colors duration-200"
                    >
                      {office.address}
                    </a>
                  </div>
                </div>
                <p class="text-gray-600 leading-relaxed ml-16">
                  {office.description}
                </p>
                {office.buildingPhoto && (
                  <div class="ml-16 mt-4">
                    <img
                      src={office.buildingPhoto}
                      alt={office.subtitle}
                      class="rounded-lg shadow-md w-full max-w-md"
                      loading="lazy"
                    />
                  </div>
                )}
              </div>
            ))}
            </div>

            <!-- Contact CTA -->
            <div class="bg-gray-50 rounded-xl p-6 mb-8 max-w-2xl mx-auto text-left">
              <h4 class="text-lg font-semibold text-navy mb-3">
                {t.whereWeAre.contact.title}
              </h4>
              <p class="text-gray-600 mb-4">
                {t.whereWeAre.contact.description}
              </p>
              <div class="flex flex-col sm:flex-row gap-3">
                <a
                  href={`tel:${t.footer.phone}`}
                  class="inline-flex items-center justify-center px-4 py-2 bg-navy text-white rounded-lg font-semibold hover:bg-navy-light transition-colors duration-200"
                >
                  <Icon name="Phone" class="w-4 h-4 mr-2" size={16} />
                  {t.whereWeAre.contact.callNow}
                </a>
                <a
                  href={`/${lang}/contact`}
                  class="inline-flex items-center justify-center px-4 py-2 border-2 border-navy text-navy rounded-lg font-semibold hover:bg-navy hover:text-white transition-colors duration-200"
                >
                  {t.common.bookConsultation}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Office Hours -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-navy mb-4">
            {t.footer.officeHours}
          </h2>
        </div>

        <div class="max-w-2xl mx-auto">
          <div class="bg-white rounded-xl shadow-lg p-8">
            <h3 class="text-center font-semibold text-navy mb-4">
              {t.footer.officeHoursDescription}
            </h3>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang={lang} />
</Layout>
