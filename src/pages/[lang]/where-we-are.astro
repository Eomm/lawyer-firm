---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Icon from '@/components/Icon.astro';
import { Image } from 'astro:assets';
import { getTranslations, getStaticPaths, type Language } from '@/i18n';

import sedeCesenaImage from '/public/images/sede-cesena.png';

export { getStaticPaths };

// const imageMap = {
//   'sedeCesenaImage': sedeCesenaImage,
// }
const baseUrl = import.meta.env.BASE_URL || '';
const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);
const currentPath = `${baseUrl}${lang}/where-we-are`;
---

<Layout title={t.whereWeAre.title} description={t.whereWeAre.seo} lang={lang} currentPath={currentPath}>
  <Header lang={lang} currentPath={currentPath} />

  <main>
    <!-- Hero Section -->
    <section class="py-10 bg-gradient-to-br from-navy to-navy-light text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {t.whereWeAre.title}
        </h1>
        <p class="text-xl text-gray-200 max-w-3xl mx-auto">
          {t.whereWeAre.description}
        </p>
      </div>
    </section>

    <!-- Location Section -->
    <section class="py-10">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Location Info -->
          <div>
            <!-- Locations -->
            <div class="text-left">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {
                  t.whereWeAre.locations.map(office => (
                    <div class="mb-8">
                      <div class="flex items-start mb-4">
                        <div class="w-12 h-12 bg-navy rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                          <Icon name="MapPin" class="w-6 h-6 text-gold" size={24} />
                        </div>
                        <div>
                          <h3 class="text-lg font-semibold text-navy mb-2">{office.subtitle}</h3>
                          <a
                            href={office.googleMapsUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-700 text-lg underline hover:text-gold transition-colors duration-200"
                          >
                            {office.address}
                          </a>
                        </div>
                      </div>
                      <p class="text-gray-600 leading-relaxed ml-16">{office.description}</p>
                      {office.buildingPhoto && (
                        <div class="ml-16 mt-4">
                          <Image
                            src={sedeCesenaImage}
                            alt={office.subtitle}
                            class="rounded-lg shadow-md w-full max-w-md"
                            loading="lazy"
                          />
                        </div>
                      )}
                    </div>
                  ))
                }
              </div>

              <div class="flex items-start mt-8 mb-4">
                <div class="w-12 h-12 bg-navy rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                  <Icon name="Clock" class="w-6 h-6 text-gold" size={24} />
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-navy mb-2">{t.footer.officeHours}</h3>
                  <p class="text-gray-600 mb-4">
                    {t.footer.officeHoursDescription}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-10 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h3 class="text-3xl md:text-4xl font-bold text-navy mb-6">
          {t.whereWeAre.contact.title}
        </h3>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          {t.whereWeAre.contact.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`${baseUrl}${lang}/contact`}
            class="inline-flex items-center justify-center px-4 py-2 bg-navy text-white px-8 py-4 rounded-lg font-semibold hover:bg-navy-light transition-colors duration-200"
          >
            {t.common.bookConsultation}
          </a>
          <a
            href={`tel:${t.home.cta.phone}`}
            class="inline-flex items-center justify-center px-4 py-2 bg-navy text-white px-8 py-4 rounded-lg font-semibold hover:bg-navy-light transition-colors duration-200"
          >
            <Icon name="Phone" class="w-4 h-4 mr-2" size={16} />
            {t.whereWeAre.contact.callNow}
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<Footer lang={lang} />
