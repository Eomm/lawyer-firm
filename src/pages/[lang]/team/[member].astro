---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { Image } from 'astro:assets';
import { getTranslations, type Language } from '@/i18n';

// Import member detail images
import ferriniLongImage from '/public/images/ferrini-long.png';
import giordanaLongImage from '/public/images/giordana-long.png';
import maraldiLongImage from '/public/images/maraldi-long.png';

export async function getStaticPaths() {
  const members = ['luca-ferrini', 'giordana-pasini', 'vanessa-maraldi'];
  const languages = ['en', 'it'];

  return languages.flatMap(lang =>
    members.map(member => ({
      params: { lang, member },
    }))
  );
}

const { lang, member } = Astro.params as { lang: Language; member: string };
const t = getTranslations(lang);
const currentPath = `/${lang}/team/${member}`;

// Get member data
const memberData = {
  'luca-ferrini': {
    name: t.team.members.luca.name,
    title: t.team.members.luca.title,
    bio: t.team.members.luca.bio,
    fullBio: t.team.members.luca.fullBio,
    specializations: t.team.members.luca.specializations,
    education: t.team.members.luca.education,
    admissions: t.team.members.luca.admissions,
    image: ferriniLongImage,
  },
  'giordana-pasini': {
    name: t.team.members.giordana.name,
    title: t.team.members.giordana.title,
    bio: t.team.members.giordana.bio,
    fullBio: t.team.members.giordana.fullBio,
    specializations: t.team.members.giordana.specializations,
    education: t.team.members.giordana.education,
    admissions: t.team.members.giordana.admissions,
    image: giordanaLongImage,
  },
  'vanessa-maraldi': {
    name: t.team.members.vanessa.name,
    title: t.team.members.vanessa.title,
    bio: t.team.members.vanessa.bio,
    fullBio: t.team.members.vanessa.fullBio,
    specializations: t.team.members.vanessa.specializations,
    education: t.team.members.vanessa.education,
    admissions: t.team.members.vanessa.admissions,
    image: maraldiLongImage,
  },
};

const currentMember = memberData[member as keyof typeof memberData];
const pageTitle = `${currentMember.name} - ${t.team.title}`;
const pageDescription = `${currentMember.name}, ${currentMember.title} at Studio Legale Ferrini. ${currentMember.bio}`;
---

<Layout title={pageTitle} description={pageDescription} lang={lang} currentPath={currentPath}>
  <Header lang={lang} currentPath={currentPath} />

  <main>
    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-4" aria-label="Breadcrumb">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <a href={`/${lang}`} class="text-navy hover:text-gold transition-colors duration-200">
              {t.nav.home}
            </a>
          </li>
          <li class="text-gray-400">/</li>
          <li>
            <a
              href={`/${lang}/team`}
              class="text-navy hover:text-gold transition-colors duration-200"
            >
              {t.nav.team}
            </a>
          </li>
          <li class="text-gray-400">/</li>
          <li class="text-gray-600">{currentMember.name}</li>
        </ol>
      </div>
    </nav>

    <!-- Profile Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <!-- Photo -->
          <div class="lg:col-span-1">
            <div class="sticky top-8">
              <Image
                src={currentMember.image}
                alt={currentMember.name}
                class="w-full rounded-xl shadow-lg"
                loading="eager"
                width={400}
                height={600}
              />
              <div class="mt-6 bg-gray-50 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-navy mb-4">
                  {t.team.memberDetail.contactInformation}
                </h3>
                <div class="space-y-3 text-sm">
                  <div class="flex items-center">
                    <svg
                      class="w-4 h-4 mr-3 text-gold flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                      ></path>
                    </svg>
                    <a
                      href="tel:+390541123456"
                      class="text-navy hover:text-gold transition-colors duration-200"
                    >
                      +39 0541 123456
                    </a>
                  </div>
                  <div class="flex items-center">
                    <svg
                      class="w-4 h-4 mr-3 text-gold flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                      ></path>
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                    </svg>
                    <a
                      href="mailto:info@studiolegaleferrini.com"
                      class="text-navy hover:text-gold transition-colors duration-200"
                    >
                      info@studiolegaleferrini.com
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="lg:col-span-2">
            <h1 class="text-4xl md:text-5xl font-bold text-navy mb-4">
              {currentMember.name}
            </h1>
            <p class="text-xl text-gold font-semibold mb-8">
              {currentMember.title}
            </p>

            <!-- Full Bio -->
            <div class="prose prose-lg max-w-none mb-12">
              <p class="text-gray-700 leading-relaxed">
                {currentMember.fullBio}
              </p>
            </div>

            <!-- Contact CTA -->
            <div class="bg-gray-50 rounded-xl p-8">
              <h3 class="text-xl font-bold text-navy mb-4">
                {t.team.memberDetail.getInTouch}
              </h3>
              <p class="text-gray-600 mb-6">
                {t.team.memberDetail.scheduleConsultation.replace('{name}', currentMember.name)}
              </p>
              <a
                href={`/${lang}/contact`}
                class="inline-block bg-navy text-white px-6 py-3 rounded-lg font-semibold hover:bg-navy-light transition-colors duration-200 focus:outline-none focus:ring-4 focus:ring-navy focus:ring-opacity-50"
              >
                {t.common.bookConsultation}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Back to Team -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <a
          href={`/${lang}/team`}
          class="inline-flex items-center text-navy hover:text-gold transition-colors duration-200 font-semibold"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
              clip-rule="evenodd"></path>
          </svg>
          {t.team.memberDetail.backToTeam}
        </a>
      </div>
    </section>
  </main>

  <Footer lang={lang} />
</Layout>
