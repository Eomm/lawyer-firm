---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { Image } from 'astro:assets';
import Icon from '@/components/Icon.astro';
import { getTranslations, type Language } from '@/i18n';

// Import member detail images
import ferriniLongImage from '/public/images/ferrini-long.png';
import giordanaLongImage from '/public/images/giordana-long.png';
import maraldiLongImage from '/public/images/maraldi-long.png';

// This is a static paths function to generate pages for each team member in each language
// It can't use memberData directly because Astro needs to statically analyze the return value
export async function getStaticPaths() {
  const languages = ['en', 'it'];
  const members = ['luca-ferrini', 'giordana-pasini', 'vanessa-maraldi'];

  return languages.flatMap(lang =>
    members.map(member => ({
      params: { lang, member },
    }))
  );
}

const { lang, member } = Astro.params as { lang: Language; member: string };
const t = getTranslations(lang);
const baseUrl = import.meta.env.BASE_URL || '';
const currentPath = `${baseUrl}${lang}/team/${member}`;

// Get member data
const memberData = {
  'luca-ferrini': {
    ...t.team.members['luca-ferrini'],
    image: ferriniLongImage,
  },
  'giordana-pasini': {
    ...t.team.members['giordana-pasini'],
    image: giordanaLongImage,
  },
  'vanessa-maraldi': {
    ...t.team.members['vanessa-maraldi'],
    image: maraldiLongImage,
  },
};

const currentMember = memberData[member as keyof typeof memberData] as any;
const pageTitle = `${currentMember.name} - ${t.team.title}`;
---

<Layout title={pageTitle} description={currentMember.seo} lang={lang} currentPath={currentPath}>
  <Header lang={lang} currentPath={currentPath} />

  <main>
    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-4" aria-label="Breadcrumb">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <a href={`/${lang}`} class="text-navy hover:text-gold transition-colors duration-200" title={t.nav.home}>
              {t.nav.home}
            </a>
          </li>
          <li class="text-gray-400">/</li>
          <li>
            <a
              href={`${baseUrl}${lang}/team`}
              class="text-navy hover:text-gold transition-colors duration-200"
              title={t.nav.team}
            >
              {t.nav.team}
            </a>
          </li>
          <li class="text-gray-400">/</li>
          <li class="text-gray-600">{currentMember.name}</li>
        </ol>
      </div>
    </nav>

    <!-- Profile Section -->
    <section class="py-6">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <!-- Photo -->
          <div class="lg:col-span-1">
            <div class="sticky top-8">
              <Image
                src={currentMember.image}
                alt={currentMember.name}
                class="w-full rounded-xl shadow-lg object-cover object-top max-h-[350px] sm:max-h-[500px]"
                loading="eager"
                fetchpriority="high"
              />
              <div class="mt-6 bg-gray-50 rounded-xl p-6 border border-navy/10">
                <h3 class="text-lg font-semibold text-navy mb-4">
                  {t.team.memberDetail.contactInformation}
                </h3>
                <div class="space-y-3 text-sm">
                  <!-- <div class="flex items-center">
                    <Icon name="Phone" class="w-4 h-4 mr-3 text-gold flex-shrink-0" size={16} />
                    <a
                      href={`tel:${t.home.cta.phone}`}
                      class="text-navy hover:text-gold transition-colors duration-200"
                    >
                      {t.home.cta.phone}
                    </a>
                  </div> -->
                  <div class="flex items-center">
                    <Icon name="Mail" class="w-4 h-4 mr-3 text-gold flex-shrink-0" size={16} />
                    <a
                      href=`mailto:${currentMember.email}?subject=Richiesta%20consulenza`
                      class="text-navy hover:text-gold transition-colors duration-200"
                      title={currentMember.email}
                    >
                      {currentMember.email}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="lg:col-span-2">
            <h1 class="text-4xl md:text-5xl font-bold text-navy mb-4">
              {currentMember.name}
            </h1>
            <p class="text-xl text-gold font-semibold mb-8">
              {currentMember.title}
            </p>

            <!-- Full Bio -->
            <div
              class="leading-relaxed prose prose-lg max-w-none mb-12 text-gray-700 [&>p]:mb-4"
              set:html={currentMember.fullBio}
            />

            {
              currentMember.publications && (
                <div class="mb-8">
                  <h3 class="text-2xl font-bold text-navy mb-4">{t.team.memberDetail.publications}</h3>
                  <ul class="list-disc pl-6 space-y-2 text-gray-700">
                    {currentMember.publications.map((pub: string) => (
                      <li>{pub}</li>
                    ))}
                  </ul>
                </div>
              )
            }

            {
              currentMember.reports && (
                <div class="mb-8">
                  <h3 class="text-2xl font-bold text-navy mb-4">{t.team.memberDetail.reports}</h3>
                  <ul class="list-disc pl-6 space-y-2 text-gray-700">
                    {currentMember.reports.map((pub: string) => (
                      <li>{pub}</li>
                    ))}
                  </ul>
                </div>
              )
            }

            {
              currentMember.specializations && (
                <div class="mb-8">
                  <h3 class="text-2xl font-bold text-navy mb-4">{t.team.memberDetail.specializations}</h3>
                  <ul class="list-disc pl-6 space-y-2 text-gray-700">
                    {currentMember.specializations.map((special: string) => (
                      <li>{special}</li>
                    ))}
                  </ul>
                </div>
              )
            }

            <!-- Contact CTA -->
            <div class="bg-gray-50 rounded-xl p-8 border border-navy/10">
              <h3 class="text-xl font-bold text-navy mb-4">
                {t.team.memberDetail.getInTouch}
              </h3>
              <p class="text-gray-600 mb-6">
                {t.team.memberDetail.scheduleConsultation.replace('{name}', currentMember.name)}
              </p>
              <a
                href=`mailto:${currentMember.email}?subject=Richiesta%20consulenza`
                class="inline-flex items-center justify-center bg-navy text-white px-6 py-3 rounded-lg font-semibold hover:bg-navy-light transition-colors duration-200 focus:outline-none focus:ring-4 focus:ring-navy focus:ring-opacity-50"
                title={t.common.bookConsultation}
              >
                <Icon name="Mail" class="w-4 h-4 mr-2" size={16} />
                {t.common.bookConsultation}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Back to Team -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <a
          href={`${baseUrl}${lang}/team`}
          class="inline-flex items-center text-navy hover:text-gold transition-colors duration-200 font-semibold"
          title={t.team.memberDetail.backToTeam}
        >
          <Icon name="ArrowLeft" class="w-4 h-4 mr-2" size={16} />
          {t.team.memberDetail.backToTeam}
        </a>
      </div>
    </section>
  </main>

  <Footer lang={lang} />
</Layout>
